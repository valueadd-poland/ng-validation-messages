{
  "skipCI": true,
  "hooks": {
    "pre-commit": "lint-staged",
    "pre-push": "node -e \"console.log('Checking with prettier if files are correctly formatted. Errors will be listed below.')\" && prettier apps/**/*.{json,css,scss,js,ts,html} --list-different && prettier libs/**/*.{json,css,scss,js,ts,html} --list-different && npm run affected:lint -- --base=master --head=HEAD"
  }
}
